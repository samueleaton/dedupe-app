@require "./reset"
@require "./global"

html, body
  font-family FONT_STACK
  display block
  width 100%
  height 100%
.body-inner
  width 95%
  max-width 1200px
  display block
  margin 0 auto
  padding 0 0 60px
  & > h2
    font-size 14px
    color rgb(70,70,70)
h1
  margin 20px 0
  font-size 20px
form
  display block
  width 100%
  height auto
  margin 30px 0
  label
    display block
    margin-bottom 10px
    font-size 14px
  &.generate-num-form
    input
      display inline-block
      outline none
      border 1px solid rgb(210,210,210)
      font-size 13px
      height 30px
      line-height 30px
      border-radius 3px
      padding 5px
      box-sizing border-box
      vertical-align top
      margin-right 10px
    .warning
      font-size 13px
      margin 10px 0 0
      padding 10px 10px 8px
      background-color lighten(ORANGE, 90%)
      border 1px solid ORANGE
      color darken(ORANGE, 40%)
      border-radius 2px

button
  display inline-block
  outline none
  border 1px solid rgb(30,30,30)
  background-color rgb(60,60,60)
  color rgb(250,250,250)
  border-radius 3px
  height 30px
  line-height 28px
  padding 0 10px
  box-sizing border-box
  vertical-align top
  font-size 13px
  font-weight 300
  transition background-color .2s, border-color .2s, color .2s
  &:focus
    border-color rgb(50,50,50)
    background-color rgb(90,90,90)
    color rgb(255,255,255)
  &:hover
    border-color rgb(50,50,50)
    background-color rgb(95,95,95)
    color rgb(255,255,255)
  &:active
    border-color rgb(10,10,10)
    background-color rgb(40,40,40)
    color rgb(250,250,250)
  &.processing
    border-color rgb(30,30,30)
    background-color rgb(120,120,120)
    color rgb(255,255,255)
    &:after
      content " [crunching]"

textarea
  font-size 12px
  font-family MONOSPACE_FONT_STACK
  min-height 200px
  min-width 100%
  width 100%
  max-width 100%
  display block
  margin 10px 0

.forms-cont
  margin 20px 0
.note
  margin 20px 0
  padding 10px 10px 5px
  background-color lighten(GREEN, 90%)
  border 1px solid GREEN
  color darken(GREEN, 50%)
  border-radius 2px
  h2
    margin 0 0 10px
    font-weight 500
    font-size 18px
  p
    margin 0 0 10px
    font-size 14px
div.result-cont
  margin 20px 0
  padding 10px 10px 0
  background-color lighten(GREEN, 90%)
  border 1px solid GREEN
  color darken(GREEN, 50%)
  border-radius 2px
  h2
    margin 0 0 10px
    font-weight 500
    font-size 18px
  p
    font-size 13px
    margin-bottom 15px
  div.result-row
    margin-bottom 20px
  div.result-label
    // font-family MONOSPACE_FONT_STACK
    font-size 13px
    font-weight 300
    color darken(GREEN, 50%)
    display block
    line-height 100%
  div.result-value
    font-family MONOSPACE_FONT_STACK
    font-weight 500
    font-size 13px
    padding 5px
    margin 5px 0
    background-color lighten(GREEN, 95%)
    border 1px solid lighten(GREEN, 50%)
    color darken(GREEN, 60%)
    border-radius 2px
    line-height 100%
